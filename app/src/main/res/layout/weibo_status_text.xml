<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/colorWhile"
    app:cardCornerRadius="@dimen/card_radian"
    app:contentPaddingTop="@dimen/card_vertical_margin"
    app:contentPaddingBottom="@dimen/card_vertical_margin"
    app:contentPaddingLeft="@dimen/card_horizontal_margin"
    app:contentPaddingRight="@dimen/card_horizontal_margin">

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_middle_size"
        android:textColor="@color/content_text_color"
        android:text="微博正文"/>

</android.support.v7.widget.CardView>