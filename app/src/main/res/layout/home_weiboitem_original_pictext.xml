<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/origin_weibo_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/timeline_feedcard_retweet_background_auto"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/home_weiboitem_titlebar" />

    <com.mapuw.lpop.widget.emojitextview.EmojiTextView
        android:id="@+id/weibo_Content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/card_horizontal_margin"
        android:layout_marginLeft="@dimen/card_horizontal_margin"
        android:layout_marginRight="@dimen/card_horizontal_margin"
        android:layout_marginTop="@dimen/card_horizontal_margin"
        android:lineSpacingExtra="@dimen/home_original_weiboitem_linespace"
        android:text="#知政#【财政部谈跨境电商新政：不会给消费者带来太大负担】财政部关税司有关负责人坦承，新政客观上会提高消费者总体税负水平。但其指出，在税率设置上暂给予一定优惠，具体而言有升有降。新政有利于电商化解部分成本，对大众消费品价格总体影响有限，不会给消费者带来太大负担。http://t.cn/RqXsr16"
        android:textColor="@color/home_original_weiboitem_font"
        android:textSize="@dimen/home_original_weiboitem_font" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/weibo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:id="@+id/retweetStatus_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_retweet_weiboitem_bg_auto"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <com.mapuw.lpop.widget.emojitextview.EmojiTextView
            android:id="@+id/origin_nameAndcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/home_weiboitem_marginleftright"
            android:layout_marginRight="@dimen/home_weiboitem_marginleftright"
            android:lineSpacingExtra="@dimen/home_original_weiboitem_linespace"
            android:text="\@飞常准 :  【网曝：首都机场有人带枪上飞机】 据“停机坪”公众号1月4日发布的消息，有网友报料称，有乘客把看似是玩具或道具“手枪”带上了飞机。并在机舱里拿着枪摆各种姿势合影。事件发生的地点在北京首都机场的一架飞机上。"
            android:textColor="@color/home_retweet_weiboitem_font"
            android:textSize="@dimen/home_retweet_weiboitem_font" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/origin_imageList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp" />

    </LinearLayout>


    <include layout="@layout/mainfragment_weiboitem_bottombar" />
</LinearLayout>


